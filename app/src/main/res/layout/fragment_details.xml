<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".app.fragments.DetailsFragment">

    <data>

        <variable
            name="user"
            type="com.fizarum.get10kusd.domain.entities.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glVCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <ImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/user_avatar"
            android:padding="@dimen/standard_padding"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/glVCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvName"
            style="@style/AppTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{user.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivUserAvatar"
            tools:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/tvLastName"
            style="@style/AppTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{user.lastName}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            tools:text="@tools:sample/last_names" />

        <TextView
            style="@style/AppTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{@string/daily_wage(user.dailyWage)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLastName"
            tools:text="Daily wage: 10" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
